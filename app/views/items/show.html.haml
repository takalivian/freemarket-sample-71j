= render "header"
.details-main
  .details-main__top


  .details-main__bottom
    .details-main__bottom__product 
      .details-main__bottom__product__title 
        = @item.name
      .details-main__bottom__product__edit-dest
        .details-main__bottom__product__edit-dest__box
          - if user_signed_in? && current_user.id == @item.saler_id
            = link_to '編集', "#", class: "details-main__bottom__product__edit-dest__box__edit" 
          - else
        .details-main__bottom__product__edit-dest__box
          - if user_signed_in? && current_user.id == @item.saler_id
            = link_to '削除', item_path(@item.id), method: :delete,class: "details-main__bottom__product__edit-dest__box__dest" 
          - else
      .details-main__bottom__product__img
        = image_tag ("#{@item.images[0].url}"), size: "100%x100%", class: "large-img"
      .details-main__bottom__product__img-bottom
        .details-main__bottom__product__img-bottom__picts
          = image_tag ("#{@item.images[0].url}"), size: "100%x100%", class: "small-img"
        .details-main__bottom__product__img-bottom__picts
          = image_tag ("#{@item.images[0].url}"), size: "100%x100%", class: "small-img"
        .details-main__bottom__product__img-bottom__picts
          -# = image_tag @item.images[1].url.url, size: "100x100", class: "small-img" // 表示数を変える可能性があるため
      .details-main__bottom__product__img-price  
        = @item.price
      .details-main__bottom__product__img-text
        (税込)送料込み
      .details-main__bottom__product__img-text-bottom
        = @item.text
      .details-main__bottom__product__img-table
